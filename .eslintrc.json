{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "semi": "off",
    "space-before-function-paren": "off",
    "import/no-named-default": "off",
    "no-useless-constructor": "off"
  },
  "ignorePatterns": "build/**/*.js"
}
